extends layout

include _includes/sharedHTMLfunctions

block content
  .page-header
    .row
      .col-lg-6
        h1 #{pageHeader.title} &nbsp;
          small= pageHeader.small

  .row
    .col-xs-12.col-md-8
      .error= message
      ul.list-group
        each location in locations
          li.list-group-item
            h4
              a(href='/location/') #{location.name}
              small &nbsp;
                +rate(location.rating)
              span.badge.pull-right.badge-default #{location.distance}
            p #{location.address}
            each facility in location.facilities
              span.label.label-warning #{facility}
              &nbsp;

    .col-xs-12.col-md-4
      p.lead= sidebar
