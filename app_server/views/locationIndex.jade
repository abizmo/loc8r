extends layout

include _includes/sharedHTMLfunctions

block content
  .page-header
    .row
      .col-lg-6
        h1 #{pageHeader.title} &nbsp;
          small= pageHeader.small

  .row(ng-controller="locationListCtrl")
    .col-xs-12.col-md-8
      .error {{message}}
      ul.list-group
        li.list-group-item(ng-repeat="location in data.locations")
          h4
            a(href="/locations/{{location._id}}") {{location.name}}
            small {{location.rating}}
            span.badge.pull-right.badge-default {{location.distance}}
          p {{location.address}}
          span.label.label-warning(ng-repeat="facility in location.facilities")
            | {{facility}}

    .col-xs-12.col-md-4
      p.lead= sidebar
