extend layout

block content
  .page-header
    .row
      .col-lg-6
        h1 Review Starcups

  .row
    .col-xs-12.col-md-12
      form.form-horizontal(action='/location', method='get', role='form')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='name') Name
          .col-xs-12.col-sm-10
            input#name.form-control(type='name')
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='rating') Rating
          .col-xs-12.col-sm-2
            select#rating.form-control
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group
          label.col-xs-10.col-sm-2.control-label(for='review') Review
          .col-xs-12.col-sm-10
            textarea#review.form-control

        button.btn.btn-default.pull-right.col-xs-12.col-sm-2(type='submit') Add review
